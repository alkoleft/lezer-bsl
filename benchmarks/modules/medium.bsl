Процедура ОбработкаДанных(МассивДанных)
    Перем Счетчик = 0;
    Перем Сумма = 0;
    
    Для Каждого Элемент Из МассивДанных Цикл
        Если Элемент.Значение <> Неопределено Тогда
            Сумма = Сумма + Элемент.Значение;
            Счетчик = Счетчик + 1;
        КонецЕсли;
    КонецЦикла;
    
    Если Счетчик > 0 Тогда
        Возврат Сумма / Счетчик;
    Иначе
        Возврат 0;
    КонецЕсли;
КонецПроцедуры

Функция ВычислитьСреднее(Массив)
    Перем Результат = 0;
    Для Индекс = 0 По Массив.ВГраница() Цикл
        Результат = Результат + Массив[Индекс];
    КонецЦикла;
    Возврат Результат / Массив.Количество();
КонецФункции
